<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Pre-Builds Branch-->
        <record id="view_prebuild_branch_form" model="ir.ui.view">
            <field name="model">runbot.prebuild.branch</field>
            <field name="arch" type="xml">
                <form string="Pre-Build" version="7.0">
                    <sheet>
                        <group>
                            <field name="branch_id"/>
                            <field name="check_pr"/>
                            <field name="check_new_commit"/>
                            <field name="create_status_ok"/>
                            <field name="sha"/>
                            <field name="repo_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_prebuild_branch_tree" model="ir.ui.view">
            <field name="model">runbot.prebuild.branch</field>
            <field name="arch" type="xml">
                <tree string="Pre-Builds" editable="bottom">
                    <field name="branch_id"/>
                    <field name="check_pr"/>
                    <field name="check_new_commit"/>
                    <field name="create_status_ok"/>
                    <field name="sha"/>
                    <field invisible="1" name="repo_id"/>
                </tree>
            </field>
        </record>

        <!-- Pre-Builds -->
        <record id="view_prebuild_form" model="ir.ui.view">
            <field name="model">runbot.prebuild</field>
            <field name="arch" type="xml">
                <form string="Pre-Build">
                    <header>
                        <button name="create_main_build" type="object" string="Create main build"/>
                    </header>
                    <sheet>
                        <div class="oe_title oe_left">
                                <div class="oe_edit_only">
                                    <label for="sticky"/>
                                    <field name="sticky" string="Do you want it auto-test per commit? (sticky)"/>
                                </div>
                            <h1>
                               <field name="name" default_focus="1" placeholder="i.e.: 8.0-yourprebuild"/>
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button class="oe_stat_button" icon="fa-list" name="get_builds_prebuild" type="object">
                                <div><strong>Builds</strong></div>
                            </button>
                        </div>
                        <group colspan="6">
                            <group cols="3" string="Main Configuration">
                                <field name="team_id"/>
                            </group>
                            <group cols="3" string="Extra Configuration">
                                <field name="pylint_conf_path"/>
                                <field name="lang"/>
                                <!--<field name="modules_to_exclude"/>-->
                            </group>
                        </group>
                        <separator string="Module to Install"/>
                        <field name="modules" nolabel="1"/>
                        <group colspan="6" string="Branches">
                            <div>
                                <p>
                                    Select the necessary branches one by one<br/>
                                    <strong>Hint:</strong> if you are looking for Vauxoo/lodigroup branch 8.0
                                    look for 8.0%lodigroup and you will find it.
                                </p>
                                <field name="module_branch_ids" nolabel="1"/>
                             </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_prebuild_tree" model="ir.ui.view">
            <field name="model">runbot.prebuild</field>
            <field name="arch" type="xml">
                <tree string="Pre-Builds">
                    <field name="name"/>
                    <field name="module_branch_ids"/>
                    <field name="sticky"/>
                    <field name="modules"/>
                    <field name="lang"/>
                    <field name="pylint_conf_path"/>
                    <!--<field name="modules_to_exclude"/>-->
                    <field name="script_prebuild"/>
                    <field name="script_posbuild"/>
                </tree>
            </field>
        </record>
        <record id="view_prebuild_search" model="ir.ui.view">
            <field name="model">runbot.prebuild</field>
            <field name="arch" type="xml">
                <search string="Search Pre-builds">
                    <field name="name"/>
                    <field name="sticky"/>
                    <field name="modules"/>
                    <field name="lang"/>
                    <field name="pylint_conf_path"/>
                    <!--
                    <field name="modules_to_exclude"/>
                        -->
                    <field name="script_prebuild"/>
                    <field name="script_posbuild"/>
                </search>
            </field>
        </record>
        <record id="action_prebuild" model="ir.actions.act_window">
            <field name="name">Pre-Builds</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">runbot.prebuild</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_prebuild" action="action_prebuild" parent="runbot.menu_runbot"/>

        <!-- Runbot Team -->

        <record id="view_runbot_team_tree" model="ir.ui.view">
            <field name="model">runbot.team</field>
            <field name="arch" type="xml">
                <tree string="Runbot Teams">
                    <field name="name"/>
                    <field name="privacy_visibility"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="view_runbot_team_form" model="ir.ui.view">
            <field name="model">runbot.team</field>
            <field name="arch" type="xml">
                <form string="team" version="7.0">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="privacy_visibility"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_runbot_team" model="ir.actions.act_window">
            <field name="name">Team</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">runbot.team</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_runbotteam" action="action_runbot_team" parent="runbot.menu_runbot"/>

        <!--inherit runbot.build-->
        <record id="view_build_form_inh_prebuild_01" model="ir.ui.view">
            <field name="model">runbot.build</field>
            <field name="inherit_id" ref="runbot.view_build_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="prebuild_id"/>
                    <field name="team_id"/>
                    <field name="from_main_prebuild_ok"/>
                    <separator string="Build lines" colspan="4"/>
                    <field name="line_ids" readonly="1" nolabel="1" colspan="4">
                        <tree string="Build Lines">
                            <field name="branch_id"/>
                            <field name="short_sha"/>
                            <field name="date"/>
                            <field name="author"/>
                            <field name="subject"/>
                            <field name="committername"/>
                            <field name="reason_ok"/>
                            <field name="reason_pr_ok"/>
                            <field name="create_status_ok"/>
                        </tree>
                        <form string="Build Lines">
                            <field name="branch_id"/>
                            <field name="refname"/>
                            <field name="sha"/>
                            <field name="short_sha"/>
                            <field name="commit_url" widget="url"/>
                            <field name="date"/>
                            <field name="author"/>
                            <field name="subject"/>
                            <field name="committername"/>
                            <field name="prebuild_line_id"/>
                            <field name="reason_ok"/>
                            <field name="reason_pr_ok"/>
                            <field name="create_status_ok"/>
                        </form>
                    </field>
                </xpath>
                <xpath expr="//header/button[@name='reset']" position="after">
                    <button name="force_schedule" type="object" string="Force run build"/>
                    <button name="fetch_build_lines" type="object" string="Fetch build"/>
                    <button name="kill" type="object" string="Kill build"/>
                </xpath>
            </field>
        </record>
        <record id="view_build_tree_inh_prebuild_01" model="ir.ui.view">
            <field name="model">runbot.build</field>
            <field name="inherit_id" ref="runbot.view_build_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="prebuild_id"/>
                </xpath>
            </field>
        </record>
        <record id="view_build_search_inh_prebuild_01" model="ir.ui.view">
            <field name="model">runbot.build</field>
            <field name="inherit_id" ref="runbot.view_build_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="prebuild_id"/>
                    <field name="team_id"/>
                </xpath>
                <xpath expr="//filter[@string='Status']" position="after">
                    <filter string="Prebuild" domain="[]" context="{'group_by':'prebuild_id'}"/>
                    <filter string="Team" domain="[]" context="{'group_by':'team_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="view_repo_form_inh_team_01" model="ir.ui.view">
            <field name="model">runbot.repo</field>
            <field name="inherit_id" ref="runbot.view_repo_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='url']" position="after">
                    <field name="team_id"/>
                </xpath>
            </field>
        </record>
    <!-- Templates -->
    <template id="runbot_teams" name="Teams">
      <img src="/runbot_prebuild/static/src/img/bkg.jpg" class="img-responsive center-block" >
      <div class="text-center" style="position: absolute; width:100%; top:25%; background: transparent;">
          <div class="btn-group">
              <button type="button" class="btn btn-lg btn-primary"><span>Pick a Team</span></button>
              <button href="#" class="btn btn-primary btn-lg dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <t t-foreach='teams' t-as='team'>
                    <li><a t-attf-href="/runbot/team/{{slug(team)}}"><t t-esc="team.name"/></a></li>
                </t>
              </ul>
          </div>
      </div>
      </img>
    </template>
    <template id="runbot_home" name="Vauxoo Runbot">
        <t t-call='website.layout'>
            <div class="container">
                <div class="row">
                    <div class="row col-md-12">
                        <t t-call="runbot_prebuild.runbot_teams"></t>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <script src="/runbot_prebuild/static/src/ext.js" type="type/javascript"/>
        </xpath>
    </template>
    <template id="runbot_prebuild" inherit_id="runbot.repo" name="Runbot PreBuild">
        <xpath expr="//t[@t-set='head']" position="inside">
            <link href="/runbot_prebuild/static/src/css/runbot_css.css" rel="stylesheet"/>
        </xpath>
        <xpath expr="//t[@t-if='repo']" position="before">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b style="font-size: 18px;"><t t-esc="team and team.name or 'Pick a Team'"/></b><b class="caret"></b></a>
              <ul class="dropdown-menu">
                <t t-foreach='teams' t-as='team'>
                    <li><a t-attf-href="/runbot/team/{{slug(team)}}"><t t-esc="team.name"/></a></li>
                </t>
              </ul>
            </li>
          </ul>
        </xpath>
        <xpath expr="//table/tr/th" position="replace">
            <th><h5>Information</h5></th> 
        </xpath>
        <xpath expr="//table/tr/td" position="replace">
            <td colspan="4"><h5>Builds</h5></td> 
        </xpath>
        <xpath expr="//t[@t-if='repo']/ul" position="replace">
            <!-- Just to delete the original caret.
                 -->
        </xpath>
        <xpath expr="//t[@t-as='bu']//td//t[4]" position="before">
            <t t-if="bu['prebuild_id'].name">
                <div class="list-group builds">
                    <div class="list-group-item">
                        <t t-call="runbot.build_button"></t>
                    </div>
                    <t t-foreach="bu['build'].line_ids" t-as="build_line">
                        <!--
                        <a t-att-href="build_line.branch_id.branch_url" target="_blank"><t t-esc="build_line.branch_id.complete_name"/></a>
                        -->
                        <!--<span t-esc="prebuild_line.author"/>-->
                        <a t-att-class="(build_line.reason_ok and 'active ' or '') + 'list-group-item '" t-att-title="build_line.branch_id.complete_name"  data-toggle="tooltip" data-placement="top" t-att-href="build_line.commit_url" target="_blank"><t t-esc="build_line.short_sha"/></a>
                    </t>
                </div>
            </t>
        </xpath>
        <xpath expr='//tr[@t-foreach="branches"]//small' position="replace">
            <!-- Just to delete content
                 -->
        </xpath>
        <xpath expr='//tr[@t-foreach="branches"]//div[@class="btn-group btn-group-xs"]' position="replace">
            <!-- Just to delete content
                 -->
        </xpath>
        <xpath expr='//td[@t-attf-class="{{klass}}"]//t[@t-if]' position="replace">
            <!-- Just to delete content
                 -->
        </xpath>
        <xpath expr='//br[1]' position="replace">
            <!-- Just to delete content
                 -->
        </xpath>
        <xpath expr='//td[@t-attf-class="{{klass}}"]//small' position="replace">
            <!-- Buttons replaced to set the correct header. 
                 -->
        </xpath>
        <xpath expr='//td[@t-attf-class="{{klass}}"]//t[@t-id]' position="replace">
            <!-- Just to delete content
                 -->
        </xpath>
        <xpath expr="//td//b[@t-esc]" position="replace">
            <t t-set="sticky_test" 
                t-value="br['builds'] and br['builds'][0]['prebuild_id'] and br['builds'][0]['prebuild_id'].sticky and br['builds'][0]['fmpo']">
            </t>
            <t t-set="manual_test" 
                t-value="br['builds'] and br['builds'][0]['prebuild_id'] and not br['builds'][0]['prebuild_id'].sticky and br['builds'][0]['fmpo']">
            </t>
            <t t-set="pr_test" 
                t-value="br['builds'] and br['builds'][0]['prebuild_id'] and br['builds'][0]['prebuild_id'].sticky and not br['builds'][0]['fmpo']">
            </t>
            <t t-set="bname" t-value="len(br['builds'][0]['prebuild_id'].name) >= 20 and br['builds'][0]['prebuild_id'].name[:19]+'...' or br['builds'][0]['prebuild_id'].name"/>
            <a t-attf-href="{{'#' + str(br['builds'][0]['build'][0].id)}}" t-att-id="br['builds'][0]['build'][0].id" t-att-title="br['builds'][0]['build'][0].name">
                <h4 style="margin-bottom: 14px; margin-top: 14px;"> <!--style wired intentionally to adjust list items.-->
                    <i t-if="sticky_test" class="fa fa-star"> <span t-esc="bname"/></i>
                    <i t-if="manual_test" class="fa fa-hand-o-right"> <span t-esc="bname"/></i>
                    <t t-if="pr_test">
                        <i class="fa fa-info-circle"> <span t-esc="bname"/></i> <sup><i class="fa fa-code-fork">
                                <span t-esc="'/'.join(br['builds'][0]['build'].branch_id.name.split('/')[1:])"/></i></sup>
                    </t>
                </h4>
            </a>
            <div class="list-group builds">
                <t t-foreach="br['builds'][0]['prebuild_id'].module_branch_ids" t-as="branch_id">
                    <a class="list-group-item" t-att-href="branch_id.branch_id.repo_id.url" t-esc="branch_id.branch_id.repo_id.url"/>
                </t>
                
            </div>
        </xpath>
        <xpath expr='//t[@t-call="runbot.build_button"]' position="replace">
            <t t-set="klass">btn-group-sm</t>
        </xpath>
    </template>

    <template id="runbot_inherit_build" inherit_id="runbot.build" name="Runbot Build">
        <xpath expr="//a[1]" position="replace">
            <t t-if="repo and not team">
                <a class="navbar-brand" t-attf-href="/runbot/repo/#{ slug(repo) }"><b><t t-esc="repo.base"/></b></a>
            </t>
            <t t-if="team">
                <a class="navbar-brand" t-attf-href="/runbot/team/#{ slug(team) }"><b><t t-esc="team.name"/></b></a>
            </t>
        </xpath>
    </template>

    <record id="view_branch_search_inh_repository" model="ir.ui.view">
        <field name="model">runbot.branch</field>
        <field name="inherit_id" ref="runbot.view_branch_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="repo_id" filter_domain="[('repo_id.name','ilike',self),]"/>
                <field name="branch_base_id" filter_domain="[('branch_base_id.name','ilike',self),]"/>
                <field name="full_name"/>
            </xpath>
            <xpath expr="//filter[@string='Owner']" position="after">
                <filter string="Branch Base" domain="[]" context="{'group_by':'branch_base_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_repo_form_inh_button_branch" model="ir.ui.view">
        <field name="model">runbot.repo</field>
        <field name="inherit_id" ref="runbot.view_repo_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="get_branch_repo" string="Branches" type="object"/>
                    <button name="get_prebuild_repo" string="Prebuilds" type="object"/>
                </header>
            </xpath>
        </field>
    </record>
    
    <record id="view_branch_form_inh_full_name" model="ir.ui.view">
        <field name="model">runbot.branch</field>
        <field name="inherit_id" ref="runbot.view_branch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="full_name"/>
            </xpath>
        </field>
    </record>

    <record id="view_branch_tree_inh_full_name" model="ir.ui.view">
        <field name="model">runbot.branch</field>
        <field name="inherit_id" ref="runbot.view_branch_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="full_name"/>
            </xpath>
        </field>
    </record>
    <template id="build_button" inherit_id="runbot.build_button">
        <xpath expr="//li[13]" position="after">
            <li><a t-attf-href="/runbot/build/{{bu['id']}}/kill" t-attf-onclick="$.post('/runbot/build/{{bu['id']}}/label/1')">Kill Build</a></li>
        </xpath>
        <xpath expr="//a[3]" position="replace">
            <!-- Github button do not make sense here (already in lines)
                 -->
        </xpath>
        <xpath expr="//a[2]" position="before">
            <a t-att-href="'#'+bu['dest']" t-att-id="bu['dest']" class="btn btn-default"><t t-esc="bu['dest']"/></a>
        </xpath>
        <xpath expr="//div[1]" position="attributes">
            <attribute name="t-attf-class"></attribute>
        </xpath>
    </template>

    </data>
</openerp>
